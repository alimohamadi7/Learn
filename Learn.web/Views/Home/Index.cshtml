@using Learn.Core.DTOs
@model IEnumerable<Learn.Core.DTOs.ShowCourseListItemViewModel>
@{
    ViewData["Title"] = "خانه";
}
@section SearchBox { <div class="search-form">
        <form method="get" action="/Courses">
            <input type="text" name="filter" placeholder="چی دوست داری یاد بگیری ؟">
            <button><i class="zmdi zmdi-search"></i></button>
        </form>
    </div>
}
<main id="home-page">
    <div class="container">
        <section class="terms-items">
            <header>
                <h2> آخرین دوره های  لرن فایل  </h2>
                <a href="/Courses"> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
                @foreach (var item in Model)
                {
                    <partial name="_BoxCourse" model="item" />
                }
            </div>
        </section>

        <hr>

        <section class="terms-items">
            <header>
                <h2> دوره های محبوب لرن فایل </h2>
                <a href="/Courses"> مشاهده همه دوره ها </a>
            </header>
            <div class="row">
                @{
                    List<ShowCourseListItemViewModel> popular = ViewBag.PopularCourse as List<ShowCourseListItemViewModel>;
                }
                @if (popular != null)
                {
                    foreach (var item in popular)
                    {
                        <partial name="_BoxCourse" model="@item" />
                    }
                }
            </div>
        </section>
    </div>
</main>

