@model  Learn.Core.DTOs.ShowCourseListItemViewModel
<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 term-col">
    <article>
        <a href="/ShowCourse/@Model.CourseId/@Model.Title" class="img-layer"><img src="~/CourseImage/thumb/@Model.ImageName"></a>
        <h2><a href="/ShowCourse/@Model.CourseId/@Model.Title"> @Model.Title </a></h2>
        @if (Model.Price == 0)
        {
            <span><b>رایگان</b></span>

        }
        @if (Model.Price != 0)
        {
            <span>
                <b>@Model.Price.ToString("#,0") تومان</b> 
            </span>
        }
    <i class="time">

        <b class="zmdi zmdi-time"></b>
        @Model.TotalTime
    </i>
        
    </article>
</div>

