@page
@using Learn.DataLayer.Entities.User
@model Learn.web.Pages.Admin.Users.CreateUserModel
@{
    ViewData["Title"] = "افزودن کاربر ";

    //List<Role> Roles = ViewData["Roles"] as List<Role>;
}
    <link href="~/css/pretty-checkbox.min.css" rel="stylesheet" />
    <div class="container">
        <div class="row">
            <div class="col-lg-10">
                <h1 class="page-header">افزودن کاربر جدید</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <form method="post" enctype="multipart/form-data">
                <div class="col-md-7">
                    <div class="panel panel-info panel-CreateCourse">
                        <div class="panel-heading">
                            اطلاعات کاربر
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="form-group">
                                <label>نام کاربری</label>
                                <input type="text" asp-for="CreateUserViewModel.UserName" class="form-control">
                                <span asp-validation-for="CreateUserViewModel.UserName"></span>
                            </div>
                            

                            <div class="form-group">
                                <label>ایمیل</label>
                                <input type="email" asp-for="CreateUserViewModel.Email" class="form-control">
                                <span asp-validation-for="CreateUserViewModel.Email"></span>

                            </div>
                            <div class="form-group">
                                <label>کلمه عبور</label>
                                <input type="text" asp-for="CreateUserViewModel.Password" class="form-control">
                                <span asp-validation-for="CreateUserViewModel.Password"></span>
                            </div>
                            <div class="form-group">
                                <label>نام</label>
                                <input type="text" asp-for="CreateUserViewModel.NameUser" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>نام خانوادگی</label>
                                <input type="text" asp-for="CreateUserViewModel.LastNameUser" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>تلفن</label>
                                <input type="text" asp-for="CreateUserViewModel.PhoneNumberUser" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>وبسایت</label>
                                <input type="text" asp-for="CreateUserViewModel.WebsiteUser" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>درباره</label>
                                <textarea type="text" asp-for="CreateUserViewModel.BibiographyUser"style="resize:vertical" maxlength="700"placeholder="کاراکتر مجاز 700" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <label>انتخاب نقش کاربر</label>
                                @foreach (var item in Model.CreateUserViewModel.Roles)
                                {
                                    
                                    <div class="pretty p-image p-plain">
                                        <input type="checkbox" name="SelectedRoles" value="@item.RoleId">
                                        <div class="state">
                                            <img class="image" src="~/images/001.png">
                                            <label>@item.RoleTitle</label>
                                        </div>
                                    </div>
  
                                }
                                @if (ViewData["ErrorSelectedRoles"] != null)
                                {
                                    <span class="text-danger"> لطفا حداقل یک نقش انتخاب نمایید</span>
                                }

                            </div>
                                </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            تصویر پروفایل
                        </div>
                        <!-- /.panel-heading -->

                        <img id="imgAvatar" style="margin:auto; width:300px;height:300px;" class="thumbnail" src="~/UserAvatar/user_avatar.png" />
                        <div class="form-group">
                            <label>انتخاب تصویر</label>
                            <input type="file" asp-for="CreateUserViewModel.UserAvatar">
                            <span asp-validation-for="CreateUserViewModel.UserAvatar"></span>
                        </div>

                        <!-- /.panel-body -->

                    </div>
                    <a href="/Admin/users" class="btn btn-bitbucket">بازگشت به لیست کاربران</a>
                    <input type="submit" value="ذخیره اطلاعات" class="btn btn-success btn-lg" />

                </div>

            </form>

        </div>

    </div>
@section Scripts
{

    <script src="~/AdminContent/Scripts/admin script.js"></script>
}


