@page "{id}"
@model Learn.web.Pages.Admin.CourseGroups.EditGroupModel
@{
    ViewData["Title"] = "لرن فایل |ویرایش گروه ";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">ویرایش گروه </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CourseGroups.ParentId" />
        <input type="hidden" asp-for="CourseGroups.GroupId" />
        <div class="col-md-8 col-md-push-2">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    ویرایش گروه
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="form-group">
                        <label>عنوان گروه</label>
                        <input type="text" asp-for="CourseGroups.GroupTitle" class="form-control">
                        <span asp-validation-for="CourseGroups.GroupTitle"></span>
                    </div>
                    <input type="submit" value="ویرایش اطلاعات" class="btn btn-warning" />
                </div>
                <!-- /.panel-body -->
            </div>
        </div>

    </form>
</div>
