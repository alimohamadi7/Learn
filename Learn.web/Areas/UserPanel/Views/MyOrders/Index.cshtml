@using Learn.Core.Convertors
@model IEnumerable<Learn.DataLayer.Entities.Order.Order>
@{
    ViewData["Title"] = "فاکتورهای شما";
}


<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">لرن فایل</a></li>
            <li class="breadcrumb-item active" aria-current="page"> نمایش فاکتور ها </li>
        </ul>
    </nav>
</div>
<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header><h1> فاکتورهای شما </h1></header>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th class="text-center">شماره فاکتور</th>
                                    <th class="text-center">تاریخ</th>
                                    <th class="text-center">جمع</th>
                                    <th class="text-center">پرداخت</th>
                                    <th class="text-center">#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var i = 1;}
                                @foreach (var item in Model)
                                {
                                <tr class="text-center">
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @item.CreateDate.ToShamsi()
                                    </td>
                                    <td>@item.OrderSum</td>
                                    <td>
                                        @if (item.IsFinaly)
                                        {
                                            <p class="text-success">

                                                پرداخت شده
                                            </p>
                                        }
                                        else
                                        {
                                            <p class="text-danger">

                                                پرداخت نشده
                                            </p>
                                        }
                                    </td>
                                    <td>
                                        <a class="btn btn-info" href="/UserPanel/MyOrders/ShowOrder/@item.OrderId">نمایش</a>
                                    </td>
                                    
                                </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>