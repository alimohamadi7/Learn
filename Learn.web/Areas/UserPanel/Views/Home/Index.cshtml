@using Learn.Core.Convertors
@model Learn.Core.DTOs.InformationUserViewModel

@{
    ViewData["Title"] = "پنل کاربری " + User.Identity.Name;
}
    <div class="container">
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">لرن فایل</a></li>
                <li class="breadcrumb-item active" aria-current="page"> پنل کاربری </li>
            </ul>
        </nav>
        <div class="user-account">
            <div class="row">
                <partial name="_Sidebar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    @if (ViewData["EditProfile"] != null)
                    {

                        switch (ViewData["EditProfile"])
                        {
                            case "PhotoOk":
                                {
                                    <div class="alert alert-info">
                                        <p>تغییر عکس پروفایل باموفقیت انجام شد . </p>

                                    </div>
                                    break;
                                }

                            case "OK":
                                {
                                    <div class="alert alert-info">
                                        اطلاعات کاربری شما با موفقیت ویرایش شد
                                    </div>
                                    break;
                                }
                        }
                      
                    }
                    <section class="user-account-content">
                        <header><h1> داشبورد </h1></header>
                        <div class="inner">
                            <div class="account-information">
                                <h3> اطلاعات کاربری </h3>
                                <ul>
                                    <li> <i class="zmdi zmdi-assignment-account"></i> نام کاربری :  @Model.UserName </li>
                                    <li> <i class="zmdi zmdi-email"></i> ایمیل : @Model.Email </li>
                                    <li> <i class="zmdi zmdi-calendar-check"></i> تاریخ عضویت : @Model.RegisterDate.ToShamsi() </li>
                                    <li> <i class="zmdi zmdi-account"></i> موجودی حساب : @Model.Wallet تومان </li>

                                </ul>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>

   