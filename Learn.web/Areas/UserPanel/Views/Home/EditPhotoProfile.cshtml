@model Learn.Core.DTOs.EditProfilePhotoViewModel
@{
    ViewData["Title"] = "لرن فایل |ویرایش عکس";
}

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">لرن فایل</a></li>
            <li class="breadcrumb-item active" aria-current="page"> ویرایش پروفایل </li>
        </ul>
    </nav>
</div>
<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_SideBar" />
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content">
                        <header class="panel panel-info"><h1> ویرایش عکس کاربر </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="EditPhotoProfile" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="AvatarName" />

                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12 pull-left">
                                        <div class="input-group">
                                            <p class="help-block">
                                                آواتار
                                            </p>
                                            <img class="thumbnail" src="/UserAvatar/@Model.AvatarName" style="max-width: 150px" />
                                            <p>   سایز عکس انتخابی نباید بیشتر از 300*300 پیکسل باشد</p>
                                            <input type="file" asp-for="UserAvatar" id="fileUpload" style="display:inline" />
                                            <span asp-validation-for="UserAvatar"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button id="upload" class="btn btn-success pull-left"> ویرایش اطلاعات </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>


